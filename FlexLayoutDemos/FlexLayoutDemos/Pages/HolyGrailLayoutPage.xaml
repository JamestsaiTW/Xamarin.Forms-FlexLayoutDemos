<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FlexLayoutDemos.Pages.HolyGrailLayoutPage" xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Holy Grail Layout">

    <FlexLayout Direction="Column">

        <!--  Header  -->
        <Label BackgroundColor="Aqua" FontSize="Large" HorizontalTextAlignment="Center" Text="HEADER" />

        <!--  Body  -->
        <FlexLayout FlexLayout.Grow="1">

            <!--  Content  -->
            <Label
                BackgroundColor="Gray"
                FlexLayout.Grow="1"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="CONTENT"
                VerticalTextAlignment="Center" />

            <!--  Navigation items  -->
            <BoxView FlexLayout.Basis="50" FlexLayout.Order="-1" Color="Blue" />

            <!--  Aside items  -->
            <BoxView FlexLayout.Basis="50" Color="Green" />

        </FlexLayout>

        <!--  Footer  -->
        <Label BackgroundColor="Pink" FontSize="Large" HorizontalTextAlignment="Center" Text="FOOTER" />
    </FlexLayout>
</ContentPage>