<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FlexLayoutDemos.Pages.PhotoWrappingPage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Photo Wrapping">
    <Grid>
        <ScrollView>
            <FlexLayout x:Name="flexLayout" JustifyContent="SpaceAround" Wrap="Wrap" />
        </ScrollView>

        <ActivityIndicator x:Name="activityIndicator" IsRunning="True" VerticalOptions="Center" />
    </Grid>
</ContentPage>